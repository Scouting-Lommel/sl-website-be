{
  "collectionName": "components_general_page_metas",
  "info": {
    "displayName": "Paginameta (SEO)",
    "description": ""
  },
  "options": {},
  "attributes": {
    "pageTitle": {
      "type": "string"
    },
    "pageDescription": {
      "type": "richtext"
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "metaSocial": {
      "type": "component",
      "repeatable": true,
      "component": "shared.meta-social"
    },
    "noIndex": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string",
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "required": false
    }
  }
}
