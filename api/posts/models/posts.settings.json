{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Posts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "active": {
      "type": "boolean"
    },
    "posted": {
      "type": "datetime",
      "required": true
    },
    "showFrom": {
      "type": "datetime",
      "required": true
    },
    "showEnd": {
      "type": "datetime",
      "required": false
    },
    "notice": {
      "type": "boolean"
    },
    "noticeType": {
      "type": "enumeration",
      "enum": [
        "Danger",
        "Alert",
        "Info"
      ]
    },
    "homePage": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "groupID": {
      "model": "groups"
    }
  }
}
